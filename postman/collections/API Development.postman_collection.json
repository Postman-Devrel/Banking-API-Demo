      "item": [
        {
          "name": "Generate API key",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Parse response JSON",
                  "const responseJson = pm.response.json();",
                  "",
                  "// Extract API key from response",
                  "const apiKey = responseJson.apiKey || responseJson.key || responseJson.token;",
                  "",
                  "if (apiKey) {",
                  "    // Set collection variable",
                  "    pm.collectionVariables.set('apiKey', apiKey);",
                  "    console.log('API key saved to collection variable: apiKey');",
                  "} else {",
                  "    console.error('API key not found in response');",
                  "}",
                  ""
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  ""
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:3000/api/v1/auth",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "3000",
              "path": [
                "api",
                "v1",
                "auth"
              ]
            },
            "description": "Generates a new API key for accessing the Intergalactic Bank API."
